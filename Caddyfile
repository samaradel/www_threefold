http://threefoldtoken.com:88, http://www.threefoldtoken.com:88, http://member.threefoldtoken.com:88, http://www.member.threefoldtoken.com:88 {
    bind 0.0.0.0
    gzip
    root www.threefoldtoken.com/en

    git {
      repo ssh://git@docs.greenitglobe.com:10022/gig/data_team.git
      branch production
      interval 60
      key ~/.ssh/id_rsa
      path ../../../data_team/
      then python3 scripts/process.py
      then hugo -s ../www_threefold2.0/www.threefoldtoken.com
    }

    git {
      repo ssh://git@docs.greenitglobe.com:10022/ThreeFold/www_threefold.git
      branch production
      interval 60
      key ~/.ssh/id_rsa
      path ../../../www_threefold/
      then ./update.sh
      then hugo -s ../www_threefold2.0/www.threefoldtoken.com
    }

    git {
      repo ssh://git@docs.greenitglobe.com:10022/ThreeFold/www_threefold2.0.git
      branch production
      interval 60
      key ~/.ssh/id_rsa
      path ../..
      then hugo -s  www.threefoldtoken.com
    }

    errors {
    	404 404.html # Not Found
      403 403/index.html # Forbidden
    }

    proxy /forward/v1/oauth/jwt/refresh https://itsyou.online {
        without /forward
    }

    oauth {
        client_id       threefold
        client_secret   Pb5LV6eoQqqdJx_x2kIOFe7BA5xOLGxZaBaFO1_2HggGyK4GAj3x
        auth_url        https://itsyou.online/v1/oauth/authorize
        token_url       https://itsyou.online/v1/oauth/access_token
        redirect_url    http://member.threefoldtoken.com/oauth/callback
        organizations   /ito threefold.members
        organizations   /gettingstarted threefold.members
        authentication_required /
        allow_extension css
        allow_extension js
        allow_extension png
        allow_extension svg
        allow_extension ico
        allow_extension ttf
        allow_extension woff2
        allow_extension jpg
        allow_extension jpeg
        allow_extension JPG
        refreshable

        login_page /login
        login_url /oauth
        extra_scopes  user:name,user:see,user:keystore,user:validated:email,user:validated:phone,user:address
    }
}
