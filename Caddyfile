http://threefoldtoken.com:88, http://www.threefoldtoken.com:88, http://member.threefoldtoken.com:88, http://www.member.threefoldtoken.com:88 {
    bind 0.0.0.0
    gzip
    root www.threefoldtoken.com/en

    git {
      repo ssh://git@docs.greenitglobe.com:10022/gig/data_team.git
      branch production
      interval 60
      key ~/.ssh/id_rsa
      path ../../../data_team/
      then python3 scripts/process.py
      then hugo -s ../www_threefold/www.threefoldtoken.com
    }

    git {
      repo ssh://git@docs.grid.tf:7022/threefold/www_threefold.git
      branch production
      interval 60
      key ~/.ssh/id_rsa
      path ../..
      then ./update.sh
      then hugo -s www.threefoldtoken.com
    }

    errors {
    	404 404.html # Not Found
      403 403/index.html # Forbidden
    }
}
