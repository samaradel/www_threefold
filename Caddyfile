      repo ssh://git@docs.greenitglobe.com:10022/gig/data_team.git
      branch master
      interval 60
      key ~/.ssh/id_rsa
      path ../../../data_team/
      then python3 scripts/process.py
      then hugo -s ../www_threefold2.0/www.threefoldtoken.com
    }

